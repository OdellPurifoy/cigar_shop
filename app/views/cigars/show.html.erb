<%= content_for :body_class, 'bg-light' %>

<section class="section cigar-show">
  <div class="columns">
    <div class="column is-8 has-text-weight-bold">
      <h1 class="title is-2"><%= @cigar.brand %></h1>

      <ul class="pv1 has-text-weight-bold">
        <% if @cigar.brand? && @cigar.origin? %>
          <li class="inline-block pr3"><%= @cigar.brand %>,
            <%= @cigar.origin %></li>
        <% end %>
      </ul>
      <div class="feature-image">
        <%= image_tag(@cigar.image_url(:default)) %>
      </div>

      <div class="content pa4 mt3 bg-white border-radius-3">
        <%= @cigar.description %>

        <h3 class="subtitle is-4 pt5">Cigar Details</h3>

        <table class="table is-narrow">
          <% if @cigar.wrapper %>
            <tr>
              <td class="has-text-weight-bold">Wrapper:</td>
              <td><%= @cigar.wrapper %></td>
            </tr>
          <% end %>

          <% if @cigar.binder %>
            <tr>
              <td class="has-text-weight-bold">Binder:</td>
              <td><%= @cigar.binder %></td>
            </tr>
          <% end %>

          <% if @cigar.filler %>
            <tr>
              <td class="has-text-weight-bold">Filler:</td>
              <td><%= @cigar.filler %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
    <div class="column is-3 is-offset-1">
      <div class="bg-white pa4 border-radius-3" id="shopping-div">
        <h4 class="title is-5 has-text-centered"><%= number_to_currency(@cigar.price) %></h4>
        <p class="has-text-centered mb4">Sold by:
          <%= @cigar.user.name %></p>
        <%= button_to 'Add to Cart', '#', class: "button is-warning add-to-cart" %>
      </div>
    </div>
  </div>

  <% if cigar_author(@cigar) %>
    <%= link_to 'Edit', edit_cigar_path(@cigar), class: 'button' %>
  <% end %>
</section>